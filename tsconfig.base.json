{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "strict": true,
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "es2024",
      "ESNext"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "src/*": [
        "./js-src"
      ]
    }
  },
  "include": [
    "js-src/*.ts"
  ]
}
