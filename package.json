{
  "name": "kafka-crab-js",
  "version": "1.1.2",
  "main": "index.js",
  "types": "index.d.ts",
  "module": "commonjs",
  "files": [
    "index.d.ts",
    "index.js",
    "kafka-client.js",
    "kafka-client.d.ts",
    "kafka-stream-readable.js",
    "kafka-stream-readable.d.ts",
    "js-binding.js",
    "js-binding.d.ts"
  ],
  "napi": {
    "name": "kafka-crab-js",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu"
      ]
    }
  },
  "license": "MIT",
  "keywords": [
    "kafka",
    "napi-rs",
    "librdkafka",
    "typescript",
    "rust"
  ],
  "author": "inaiat@gmail.com",
  "homepage": "https://github.com/inaiat/kafka-crab-js.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/inaiat/kafka-crab-js.git"
  },
  "devDependencies": {
    "@faker-js/faker": "9.3.0",
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "22.10.1",
    "ava": "6.2.0",
    "dprint": "^0.48.0",
    "nanoid": "5.0.9",
    "typescript": "5.7.2",
    "copyfiles": "^2.4.1",
    "@types/copyfiles": "^2.4.4",
    "rimraf": "^6.0.1"
  },
  "ava": {
    "timeout": "3m"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --js js-src/js-binding.js --dts js-src/js-binding.d.ts --no-const-enum --platform --release",
    "postbuild": "rimraf dist && tsc && copyfiles -f js-src/js-binding.d.ts js-src/js-binding.js ./dist/*.js ./dist/*.d.ts .",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "universal": "napi universal",
    "version": "napi version",
    "fmt": "dprint fmt"
  },
  "packageManager": "pnpm@9.15.2"
}
