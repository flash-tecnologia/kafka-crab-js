{
  "name": "kafka-crab-js",
  "version": "1.4.0-beta",
  "main": "index.js",
  "types": "index.d.ts",
  "module": "commonjs",
  "files": [
    "index.d.ts",
    "index.js",
    "kafka-client.js",
    "kafka-client.d.ts",
    "kafka-stream-readable.js",
    "kafka-stream-readable.d.ts",
    "js-binding.js",
    "js-binding.d.ts"
  ],
  "napi": {
    "binaryName": "kafka-crab-js",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl"
    ]
  },
  "license": "MIT",
  "keywords": [
    "kafka",
    "napi-rs",
    "librdkafka",
    "typescript",
    "rust"
  ],
  "author": "inaiat@gmail.com",
  "homepage": "https://github.com/inaiat/kafka-crab-js.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/inaiat/kafka-crab-js.git"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@napi-rs/cli": "^3.0.0-alpha.78",
    "@types/node": "^22.15.3",
    "dprint": "^0.49.1",
    "nanoid": "^5.1",
    "typescript": "^5.8.3",
    "copyfiles": "^2.4.1",
    "@types/copyfiles": "^2.4.4",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --js js-src/js-binding.js --dts js-src/js-binding.d.ts --no-const-enum --platform --release",
    "postbuild": "rimraf dist && tsc && copyfiles -f js-src/js-binding.d.ts js-src/js-binding.js ./dist/*.js ./dist/*.d.ts .",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node --test __test__/*.test.*",
    "test:integration": "node --test __test__/integration/*.test.*",
    "universal": "napi universal",
    "version": "napi version",
    "fmt": "dprint fmt",
    "lint": "true"
  },
  "packageManager": "pnpm@10.10.0"
}
