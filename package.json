{
  "name": "kafka-crab-js",
  "version": "1.5.0-beta.1",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "js-binding.js",
    "js-binding.d.ts",
    "js-binding.cjs"
  ],
  "napi": {
    "binaryName": "kafka-crab-js",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl"
    ]
  },
  "license": "MIT",
  "keywords": [
    "kafka",
    "napi-rs",
    "librdkafka",
    "typescript",
    "rust"
  ],
  "author": "inaiat@gmail.com",
  "homepage": "https://github.com/inaiat/kafka-crab-js.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/inaiat/kafka-crab-js.git"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@napi-rs/cli": "3.0.0-alpha.91",
    "@types/copyfiles": "^2.4.4",
    "@types/node": "^24.0.4",
    "copyfiles": "^2.4.1",
    "dprint": "^0.50.0",
    "esbuild": "^0.25.5",
    "nanoid": "^5.1.5",
    "oxlint": "^1.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "prebuild": "rimraf dist",
    "build": "node build.mjs",
    "postbuild": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node --test __test__/*.test.*",
    "test:integration": "node --test __test__/integration/*.test.*",
    "version": "napi version",
    "fmt": "dprint fmt",
    "lint": "oxlint ."
  },
  "packageManager": "pnpm@10.12.1"
}
