{
  "name": "kafka-crab-js",
  "version": "2.1.0-alpha.2",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "js-binding.js",
    "js-binding.d.ts",
    "js-binding.cjs"
  ],
  "napi": {
    "binaryName": "kafka-crab-js",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl"
    ]
  },
  "license": "MIT",
  "author": "inaiat@gmail.com",
  "homepage": "https://github.com/flash-tecnologia/kafka-crab-js",
  "repository": {
    "type": "git",
    "url": "https://github.com/flash-tecnologia/kafka-crab-js.git"
  },
  "keywords": [
    "kafka",
    "rust",
    "napi",
    "librdkafka",
    "streaming",
    "producer",
    "consumer"
  ],
  "scripts": {
    "typecheck": "tsc -p . --noEmit",
    "artifacts": "napi artifacts",
    "prebuild": "rimraf dist",
    "build": "node build.mjs",
    "postbuild": "tsc -p tsconfig.base.json --emitDeclarationOnly --declaration --outDir dist",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node --test __test__/unit/*.test.*",
    "test:integration": "__test__/integration/run-tests.sh",
    "test:integration:manual": "node --test __test__/integration/*.test.*",
    "test:integration:producer": "cd __test__/integration && node producer.test.mjs",
    "test:integration:consumer": "cd __test__/integration && node consumer.test.mjs",
    "test:integration:stream": "cd __test__/integration && node consumer-stream.test.mjs",
    "test:integration:manual-commit": "cd __test__/integration && node consumer-manual-commit.test.mjs",
    "test:integration:batch": "cd __test__/integration && node consumer-stream-batch.test.mjs",
    "test:integration:limits": "cd __test__/integration && node batch-size-limits.test.mjs",
    "kafka:up": "bash ./scripts/kafka-up.sh",
    "kafka:down": "cd __test__/integration && (docker-compose down -v || podman-compose down -v)",
    "kafka:logs": "cd __test__/integration && (docker-compose logs -f kafka || podman-compose logs -f kafka)",
    "version": "napi version",
    "fmt": "dprint fmt",
    "lint": "oxlint ."
  },
  "packageManager": "pnpm@10.24.0",
  "dependencies": {
    "@napi-rs/cli": "^3.5.0"
  },
  "optionalDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^2.0.0",
    "@opentelemetry/instrumentation": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.28.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@opentelemetry/context-async-hooks": "^2.0.0",
    "@opentelemetry/sdk-trace-base": "^2.0.0",
    "@opentelemetry/sdk-trace-node": "^1.29.0",
    "@types/node": "^24.10",
    "dprint": "^0.50.2",
    "esbuild": "^0.27.0",
    "nanoid": "^5.1.6",
    "oxlint": "^1.31.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
}
