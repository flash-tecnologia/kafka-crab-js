{
  "name": "kafka-crab-js",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "module": "commonjs",
  "files": [
    "index.d.ts",
    "index.js",
    "js-binding.js",
    "js-binding.d.ts"
  ],
  "napi": {
    "name": "kafka-crab-js",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu"
      ]
    }
  },
  "license": "MIT",
  "keywords": [
    "kafka",
    "napi-rs",
    "librdkafka",
    "typescript",
    "rust"
  ],
  "author": "inaiat@gmail.com",
  "homepage": "https://github.com/inaiat/kafka-crab-js.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/inaiat/kafka-crab-js.git"
  },
  "devDependencies": {
    "@faker-js/faker": "9.2.0",
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "22.9.0",
    "ava": "6.2.0",
    "dprint": "^0.47.5",
    "nanoid": "5.0.8",
    "typescript": "5.6.3"
  },
  "ava": {
    "timeout": "3m"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --js js-binding.js --dts js-binding.d.ts --no-const-enum --platform --release && tsc",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "universal": "napi universal",
    "version": "napi version",
    "fmt": "dprint fmt"
  },
  "packageManager": "pnpm@9.7.1"
}
