{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "./js-src",
    "outDir": "./dist",
    "paths": {
      "src/*": [
        "./js-src"
      ]
    },
  },
  "include": [
    "js-src/*.ts"
  ],
  "exclude": [
    "__test__",
    "src",
    "node_modules",
    "example",
    "target",
    "npm",
    "js-binding.js",
    "js-binding.d.ts"
  ]
}