{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": "./js-src",
    "outDir": "./dist"
  },
  "include": [
    "**/*.ts"
  ],
  "copyFiles": [
    "js_src/js-binding.d.ts",
    "js_src/js-binding.js"
  ],
  "exclude": [
    "__test__",
    "src",
    "node_modules",
    "example",
    "target",
    "npm",
    "js-binding.js",
    "js-binding.d.ts"
  ]
}
